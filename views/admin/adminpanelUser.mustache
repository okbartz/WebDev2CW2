{{/entries}}

<table style="width:100%">
  <tr>
    <th>UserId</th>
    <th>FirstName</th>
    <th>SecondName</th>
    <th>Email</th>
    <th>ispantry</th>
    <th>pantryID</th>
    <th>EDIT</th>
    <th>DELETE</th>
    
  </tr>
  {{#entries}}
  <tr>
    <td><a href="/posts/{{_id}}">{{_id}}<a></td>
    <td>{{fname}}</td>
    <td>{{sname}}</td>
    <td>{{email}}</td>
    <td>{{ispantry}}</td>
    <td>{{pantryid}}</td>
    <td><a class="btn btn-warning" href="/getPostDetails/{{_id}}">EDIT</a></td>
    <td><a class="btn btn-danger" href="/deleteUser/{{_id}}">DELETE</a></td>
    
  </tr>
{{/entries}}
</table>

<hr>
<section id="edit_thing">
<div class="container">
<h1>Edit User</h1>
<form method="post" action="/editUser" role="/editUser">
    <div class="form-group">
        {{user-name-error}}
        <label for="UserId">UserId to change details for</label>
        <input type="text" value="{{idvalue}}" class="form-control" id="UserId" name="UserId" placeholder="Enter UserId address" required>
    </div>
    <div class="form-group">
       
        <label for="forename">FirstName</label>
        <input type="text" value="{{fnamevalue}}" class="form-control" id="forename" name="forename" placeholder="Enter forename" required maxlength="100">
    </div>
    <div class="form-group">
       
        <label for="surname">SecondName</label>
        <input type="text" value="{{snamevalue}}" class="form-control" id="surname" name="surname" placeholder="Enter surname" required maxlength="100">
    </div>
    <div class="form-group">
        <label for="emailaddress">Email</label>
        <input type="email" value="{{emailvalue}}" class="form-control" id="emailaddress" name="emailaddress" placeholder="Enter email address" required maxlength="200">
    </div>
       <div class="form-group">
        <label for="pass">Password</label>
        <input type="password"  class="form-control" id="pass" name="pass" placeholder="Enter password (leave empty if n/a)" minlength="8" maxlength="100">
    </div>
    <div class="form-group">
        <label id="ispantry" for="ispantry">user is pantry:</label>
    
    <select id="ispantry" name="ispantry">
    <option value="{{ispantvalue}}">Current</option>
    <option value=false>No</option>
    <option value=true>Yes</option>
    </select>

   <div class="form-group">
        <label id="pantryIDtext" for="pantryID">Selected Pantry Location</label>
 
    <select id="pantryID" name="pantryID">
    
    <option value="{{pantidvalue}}">Current</option>
    <option value="">None</option>

    {{#selectedPantries}}

    <option value={{_id}}>{{pantryTitle}}</option>

    {{/selectedPantries}}
    </select>

    </div>

    

    

    <br>
    <div class="form-group">
        <input type="submit" value="Edit" class="btn btn-primary">
    </div>
</form>

</form>
<a class="btn btn-primary" href="/addNewUser">Add a User</a >
</div>

</div>
</section>



{{>footer}}

</body>
</html>