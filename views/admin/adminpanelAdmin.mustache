<body>
{{>navbar}}
<h1>admin Panel</h1>
<p>Hello this is the admin panel</p>

<h2>Users</h2>

{{^entries}}
<b>No entries yet.</b>
{{/entries}}

<table style="width:100%">
  <tr>
    <th>AdminId</th>
    <th>FirstName</th>
    <th>SecondName</th>
    <th>Email</th>
    <th>Admin</th>
    <th>EDIT</th>
    <th>DELETE</th>
    
  </tr>
  {{#entries}}
  <tr>
    <td>{{_id}}</td>
    <td>{{fname}}</td>
    <td>{{sname}}</td>
    <td>{{email}}</td>
    <td>{{admin}}</td>
    <td><a class="btn btn-warning" href="#edit_thing">EDIT</a></td>
    <td><a class="btn btn-danger" href="/deleteAdmin/{{_id}}">DELETE</a></td>
    
  </tr>
{{/entries}}
</table>

<hr>
<section id="edit_thing">
<div class="container">
<h1>Edit Admin</h1>
<form method="post" action="/editAdmin" role="/editAdmin">
    <div class="form-group">
        {{user-name-error}}
        <label for="UserId">UserId to change details for</label>
        <input type="text" class="form-control" id="UserId" name="UserId" placeholder="Enter UserId" required>
    </div>
    <div class="form-group">
       
        <label for="forename">FirstName</label>
        <input type="text" class="form-control" id="forename" name="forename" placeholder="Enter forename" required maxlength="100">
    </div>
    <div class="form-group">
       
        <label for="surname">SecondName</label>
        <input type="text" class="form-control" id="surname" name="surname" placeholder="Enter surname" required maxlength="100">
    </div>
    <div class="form-group">
        <label for="emailaddress">Email</label>
        <input type="email" class="form-control" id="emailaddress" name="emailaddress" placeholder="Enter email address" required maxlength="200">
    </div>
       <div class="form-group">
        <label for="pass">Password</label>
        <input type="password" class="form-control" id="pass" name="pass" placeholder="Enter password" required minlength="8" maxlength="100">
    </div>
   
    <br>
    <div class="form-group">
        <input type="submit" value="Edit" class="btn btn-primary">
    </div>
</form>
<a class="btn btn-primary" href="/addNewAdmin">Add a admin</a >
</div>

</section>




